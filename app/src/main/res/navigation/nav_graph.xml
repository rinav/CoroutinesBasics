<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signupFragment">


    <fragment
        android:id="@+id/signupFragment"
        android:name="dev.rinav.room_sample.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup">

        <action
            android:id="@+id/actionGoToHome"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/actionGoToLogin"
            app:destination="@id/loginFragment" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="dev.rinav.room_sample.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/actionGoToHome"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/actionGoToSignup"
            app:destination="@id/signupFragment" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.rinav.room_sample.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/actionGoToSignup"
            app:destination="@id/signupFragment" />

    </fragment>

</navigation>